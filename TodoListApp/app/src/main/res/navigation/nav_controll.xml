<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controll"
    app:startDestination="@id/nav_add">

    <fragment
        android:id="@+id/nav_add"
        android:name="com.example.todolistapp.presentation.item.home.FormFragment"
        android:label="fragment_form"
        tools:layout="@layout/fragment_form" >
        <action
            android:id="@+id/action_nav_add_to_nav_list"
            app:destination="@id/nav_list"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_list"
        android:name="com.example.todolistapp.presentation.item.home.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" />
    <action
        android:id="@+id/action_global_formFragment"
        app:destination="@id/nav_add"
        app:launchSingleTop="true" />
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.todolistapp.presentation.item.update.UpdateFragment"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" />
    <action
        android:id="@+id/action_global_updateFragment"
        app:destination="@id/updateFragment"
        app:launchSingleTop="true" />
</navigation>